@model IEnumerable<Product>;
<div class="row pb-3">
	@foreach (var obj in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="col-12 p-1">
				<div class="card border-0 p-3 shadow border-top border-5 rounded">
					<img src="@obj.ImageUrl" class="card-img-top rounded" />
					<div class="card-body pb-0">
						<div class="pl-1">
							<p class=" card-title h5 text-dark opacity-75 text-uppercase text-center">@obj.Title</p>
							<p class=" card-title h5 text-warning text-center">@obj.Author</p>
						</div>
						<div class="pl-1">
							<p class=" h5 text-dark text-opacity-75 text-center m-0"><span class="text-decoration-line-through">@obj.ListPrice.ToString("c")</span></p>
						</div>
						<div class="pl-1">
							<p class=" h5 text-dark text-opacity-75 text-center">As low as  <span>@obj.Price100.ToString("c")</span></p>
						</div>
					</div>
					<div>
						<a asp-action="Details"
						   asp-route-productId="@obj.Id"
						class="btn btn-primary bg-gradient border-0 form-control">
							Detail
						</a>
					</div>
				</div>
			</div>

		</div>
	}
</div>